{
  "theme": {
    "name": "FoldableTheme"
  },
  "portalUrl": "http://www.arcgis.com",
  "title": "ArcGIS Web Application",
  "subtitle": "with ArcGIS WebApp Builder",

  "links":[
    {
      "label": "ArcGIS Online"
    }
  ],

  "preloadWidgets": {
    "panel": {
      "uri": "themes/FoldableTheme/panels/SimpleBorderPanel/Panel"
    },
    "widgets": [{
        "uri": "widgets/HeaderController/Widget",
        "positionRelativeTo": "browser",
        "position": {
          "left": 0,
          "top": 0,
          "right": 0,
          "height": 45
        }
      }]
  },

  "map": {
    "3D": false,
    "2D": true,

    "position": {
      "left": 0,
      "top": 45,
      "right": 0,
      "bottom": 0
    },

    "basemaps": [{
      "label": "base map1",
      "url": "http://server.arcgisonline.com/ArcGIS/rest/services/ESRI_StreetMap_World_2D/MapServer",
      "type": "tiled"
    }],
    "operationallayers": [{
      "label": "Earthquakes",
      "url": "http://sampleserver3.arcgisonline.com/ArcGIS/rest/services/Earthquakes/EarthquakesFromLastSevenDays/FeatureServer/0",
      "type": "feature"
    }],

    "mapOptions": {
      "center": [-98, 40],
      "scale": 16937199
    }
  },
  "widgetPool": {
    "panel": {
      "uri": "themes/FoldableTheme/panels/FoldablePanel/Panel",
      "positionRelativeTo": "map",
      "position": {
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },

    "widgets": [{
      "label": "Demo",
      "uri": "widgets/samplewidgets/Demo/Widget"
    },{
      "label": "PureAMD",
      "uri": "widgets/samplewidgets/PureAMD/Widget"
    },{
      "label": "Simple",
      "uri": "widgets/samplewidgets/Simple/Widget"
    },{
      "label": "UseJQuery",
      "uri": "widgets/samplewidgets/UseJQuery/Widget"
    }]
  }
}