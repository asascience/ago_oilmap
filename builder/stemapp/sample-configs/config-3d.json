{
  "theme": {
    "name": "FoldableTheme"
  },
  "portalUrl": "http://www.arcgis.com",
  "title": "ArcGIS Web Application - 3D",
  "subtitle": "with ArcGIS WebApp Builder",
  "splashPage": "widgets/Splash/Widget",
  "about": "widgets/About/Widget",
  
  "links":[
    {
      "label": "ArcGIS Online"
    }
  ],

  "preloadWidgets": {
    "panel": {
      "uri": "themes/FoldableTheme/panels/SimpleBorderPanel/Panel"
    },
    "widgets": [{
        "uri": "widgets/HeaderController/Widget",
        "positionRelativeTo": "browser",
        "position": {
          "left": 0,
          "top": 0,
          "right": 0,
          "height": 45
        },
        "config": {
          "widgets": "all"
        }
      },{
        "label": "BasemapGallery",
        "uri": "widgets/BasemapGallery/Widget",
        "position": {
          "left": 100,
          "top": 100,
          "width": 400,
          "height": 400
        }
      }]
  },

  "map": {
    "3D": true,

    "position": {
      "left": 0,
      "top": 45,
      "right": 0,
      "bottom": 0
    },

    "basemaps": [{
      "label": "base map1",
      "url": "http://server.arcgisonline.com/ArcGIS/rest/services/ESRI_Imagery_World_2D/MapServer",
      "type": "tiled"
    }],
    "operationallayers": [{
      "label": "Old Peking Basemap",
      "url": "http://10.112.18.173:6080/arcgis/rest/services/BeijingHistoricMap/MapServer",
      "type": "tiled"
    },{
      "label": "Old Peking Model",
      "url": "http://10.112.18.28/ArcGIS/rest/services/SanFrancisco/3DFeatureServer/BeijingGudai3D",
      "type": "3dmodle",
      "visible": true,
      "alpha": "1",
      "altitudeMode": "none"
    }],

    "mapOptions": {
      "camera": [116.38, 39.3522, 7946210, 0, 0.452228, 4326]
    }
  },
  "widgetPool": {
    "panel": {
      "uri": "themes/FoldableTheme/panels/FoldablePanel/Panel",
      "positionRelativeTo": "map",
      "position": {
        "top": 1,
        "right": 1,
        "bottom": 1
      }
    },

    "widgets": [{
      "index": 1,
      "label": "Bookmark",
      "uri": "widgets/Bookmark/Widget"
    }, {
      "label": "Compare",
      "uri": "widgets/MapCompare/Widget"
    }, {
      "label": "Track",
      "uri": "widgets/Track/Widget"
    }]
  }
}